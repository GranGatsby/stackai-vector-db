# API Configuration
API_TITLE="StackAI Vector Database"
API_DESCRIPTION="REST API for indexing and querying documents in a Vector Database"
API_VERSION="0.1.0"
API_PREFIX="/api/v1"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
DEBUG=false
RELOAD=false

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Cohere API Configuration (REQUIRED)
COHERE_API_KEY="your_cohere_api_key_here"
COHERE_MODEL="embed-english-v3.0"
COHERE_INPUT_TYPE="search_document"

# Vector Database Configuration
DEFAULT_EMBEDDING_DIM=1024
MAX_CHUNKS_PER_LIBRARY=10000
MAX_KNN_RESULTS=1000
DEFAULT_KNN_RESULTS=10

# Index Configuration
DEFAULT_INDEX_TYPE="linear"
INDEX_REBUILD_THRESHOLD=0.1

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT_GENERAL="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FORMAT_REQUEST="%(asctime)s - %(name)s - %(levelname)s - %(message)s | method=%(method)s path=%(path)s status=%(status_code)s duration_ms=%(duration_ms)s request_id=%(request_id)s"
